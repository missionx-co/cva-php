{
    "name": "missionx-co/cva-php",
    "description": "Class Variance Authority implementation in PHP",
    "keywords": [
        "Mission X",
        "cva-php"
    ],
    "homepage": "https://github.com/mission-x/cva-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammed Manssour",
            "email": "hello@mohammedmanssour.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "gehrisandro/tailwind-merge-php": "^1.1"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.5",
        "phpunit/phpunit": "^10.3.2",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "MissionX\\ClassVariantAuthority\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MissionX\\ClassVariantAuthority\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
